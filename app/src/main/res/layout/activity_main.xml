<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.main.view.MainActivity">

    <include
        android:id="@+id/appbarnavigationLayout"
        layout="@layout/app_bar_navigation" />

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_navigation"
        android:layout_below="@+id/linear_layout_tutorial_task_messgae" />




    <LinearLayout
        android:id="@+id/linear_layout_tutorial_task_messgae"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/appbarnavigationLayout">



        <TextView
            android:id="@+id/textViewTutorial_Task_Messgae"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:background="@color/white"
            android:gravity="center"
            android:paddingTop="@dimen/small"
            android:paddingLeft="@dimen/tiny"
            android:paddingRight="@dimen/tiny"
            android:paddingBottom="@dimen/small"
            android:text="tutorial_text_task_post"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_medium" />

    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentBottom="true"
        android:background="@color/transparent_5_white"
        app:itemBackground="@color/white"
        app:itemIconTint="@drawable/bottom_navigation_selector"
        app:itemTextColor="@drawable/bottom_navigation_selector"
        app:itemTextAppearanceActive="@style/BottomNavigationView.Active"
        app:itemTextAppearanceInactive="@style/BottomNavigationView"
        app:layout_insetEdge="bottom"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_navigation_main" />

</RelativeLayout>
