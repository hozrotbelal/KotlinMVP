<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/menu_item_height"
        android:layout_marginEnd="@dimen/margin_page_standard"
        android:layout_marginLeft="@dimen/margin_page_standard"
        android:layout_marginRight="@dimen/margin_page_standard"
        android:layout_marginStart="@dimen/margin_page_standard"
        android:gravity="top|bottom|center_vertical|fill_vertical|center|fill"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/option_item_widget_title"
            style="@style/TextAppearanceBase.Body"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/grey5" />

        <TextView
            android:id="@+id/option_item_details"
            style="@style/TextAppearanceBase.Body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="6.0"
            android:gravity="right"
            android:paddingEnd="@dimen/medium"
            android:paddingRight="@dimen/medium"
            android:textColor="@color/grey4" />

        <TextView
            android:id="@+id/option_item_widget_notification"
            style="@style/TextAppearanceBase.Body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/large"
            android:layout_marginRight="@dimen/large"
            android:background="@drawable/notification_background_active"
            android:gravity="center_vertical"
            android:padding="@dimen/small"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/option_item_widget_image_view_chevron"
            style="@style/ChevronSmall"
            android:layout_gravity="center_vertical"
            android:scaleType="fitEnd"
            app:tint="@color/grey3"
            app:srcCompat="@drawable/chevron_right" />
    </LinearLayout>

    <View style="@style/Separator" />
</LinearLayout>
